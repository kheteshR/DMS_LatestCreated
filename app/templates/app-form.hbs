{{partial 'navbar'}}
<br>
<div class="container">
    <div class="row">
          <h2>Admission form</h2>
        </div>
  <div class="row">
    <div class="col-lg-6">
    <div class="form-group">
      <label>Full Name:</label>
      {{input type="text" class="form-control" value=FullName placeholder="Enter Full Name" }}
    </div>
    <div class="form-group">
      <label>Father name:</label>
      {{input type="text" class="form-control" value=FatherName  placeholder="Enter Father name"}}
    </div>
     <div class="form-group">
      <label>Mother name:</label>
      {{input type="text" class="form-control" value=MotherName  placeholder="Enter Mother name"}}
    </div>
     <div class="form-group">
      <label>School Code:</label>
      {{input type="number" class="form-control" value=SchoolCode placeholder="Enter School Code" }}
    </div>
     <div class="form-group">
      <label>Residential Address:</label>
      {{input type="text" class="form-control" value=ResidentialAddr placeholder="Residential Address" }}
    </div>
    </div>
    <div class="col-lg-6">
     <div class="form-group">
      <label>Roll number:</label>
      {{input type="text" class="form-control" value=RollNo  placeholder="Enter roll number" }}
    </div>
         <div class="form-group">
      <label>Mobile Number:</label>
      {{input type="text" value=MobNo class="form-control"  placeholder="Mobile Number" }}
    </div>
         <div class="form-group">
      <label>Adhaar Number:</label>
      {{input type="text" value=AdharNo class="form-control"  placeholder="Enter Adhaar Number" }}
    </div>
    
      <div class="form-group">
      <label>Date of Birth:</label>
      {{bootstrap-datepicker  class="form-control" value=expiresAt placeholder="select date"}}
      
    </div>
      <label>Select your examination:</label>
    {{select-component  listitem=ListDocument selecteditemlist=propertyType }}
 </div>
 </div>
    <br>
    <button type="submit" class="btn btn-lg btn-primary btn-block" {{action "SubmitForm"}}>Submit</button>
<br>
</div>